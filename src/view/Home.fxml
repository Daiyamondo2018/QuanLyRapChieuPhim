            <Button fx:id="schedule" UserData="Schedule" mnemonicParsing="false" onAction="#JumpToWork" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
