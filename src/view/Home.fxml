                  <VBox alignment="CENTER">
                     <children>
                        <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Schedule.png" />
                           </image>
                        </ImageView>
                        <Label text="Lịch chiếu phim" />
                        <Text fx:id="scheduleTip1" opacity="0.75" strokeType="OUTSIDE" strokeWidth="0.0" text="Xem, quản lý, chỉnh sửa lịch chiếu phim" textAlignment="CENTER" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </AnchorPane>
      <AnchorPane GridPane.columnIndex="1">
         <children>
            <Button fx:id="movies" UserData="Movies" mnemonicParsing="false" onAction="#JumpToWork" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <graphic>
                  <VBox alignment="CENTER">
                     <children>
                        <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/Movies.png" />
                           </image>
                        </ImageView>
                        <Label text="Phim bộ" />
                        <Text fx:id="scheduleTip2" opacity="0.75" strokeType="OUTSIDE" strokeWidth="0.0" text="Xem, quản lý, chỉnh sửa các bộ phim" textAlignment="CENTER" />
                     </children>
                  </VBox>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </AnchorPane>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
