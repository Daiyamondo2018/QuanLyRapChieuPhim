<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane userData="Thêm phim vào lịch" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddMovieToScheduleController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <MenuButton fx:id="advance" mnemonicParsing="false" prefHeight="31.0" prefWidth="60.0" stylesheets="@../css/MenuButton.css" text="+" />
            <TextField onKeyPressed="#FindMovies" styleClass="textField" stylesheets="@../css/SearchTextField.css" />
            <Button mnemonicParsing="false" text="Tìm kiếm" />
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <AnchorPane stylesheets="@../css/button.css" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Hủy" AnchorPane.rightAnchor="0.0" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <ScrollPane fx:id="root" hbarPolicy="NEVER" styleClass="scrollpane" stylesheets="@../css/Scrollpane.css" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="paneMovie" hgap="10.0" vgap="10.0" />
         </content>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets right="-10.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
</BorderPane>
